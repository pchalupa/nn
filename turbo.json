{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"dev": {
			"persistent": true,
			"dependsOn": ["^dev"]
		},
		"ts:check": {
			"persistent": false,
			"dependsOn": ["^ts:check"]
		},
		"test": {
			"persistent": false,
			"dependsOn": ["^test"]
		},
		"test:watch": {
			"persistent": true
		}
	}
}
